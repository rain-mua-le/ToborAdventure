{
  "name": "toboradventure",
  "version": "1.0.0",
  "description": "This is a game about UTD",
  "main": "./app/main.js",
  "scripts": {
    "build": "tsc",
    "start": "electron ./app/main.js",
    "dist": "build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "babylonjs": "^4.1.0",
    "babylonjs-loaders": "^4.1.0"
  },
  "devDependencies": {
    "electron": "^10.4.7",
    "electron-builder": "22.8.1",
    "typescript": "3.9.7"
  },
  "build": {
    "appId": "com.rain.whoosh",
    "productName": "ToborAdventure",
    "directories": {
      "app": ".",
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "package.json",
      "app/**/*",
      "node_modules",
      "index.html",
      "assets/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.games"
    },
    "dmg": {
      "window": {
        "width": "800",
        "height": "600"
      },
      "contents": [
        {
          "x": 110,
          "y": 0
        },
        {
          "x": 240,
          "y": 0,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
